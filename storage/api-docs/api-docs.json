{
    "openapi": "3.0.0",
    "info": {
        "title": "Hostel World",
        "version": "1.0.0"
    },
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authRegister",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "true"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "message": {
                                            "type": "string",
                                            "default": "User register successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "false"
                                        },
                                        "data": {
                                            "type": "object",
                                            "default": "null"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "The email has already been taken."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Correct credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "true"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "readOnly": "true",
                                                    "example": "1"
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "John"
                                                },
                                                "email": {
                                                    "description": "User unique email address",
                                                    "type": "string",
                                                    "format": "email",
                                                    "readOnly": "true",
                                                    "example": "user@gmail.com"
                                                },
                                                "email_verified_at": {
                                                    "description": "Datetime marker of verification status",
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "readOnly": "true",
                                                    "example": "2019-02-25 12:59:20"
                                                },
                                                "created_at": {
                                                    "description": "Initial creation timestamp",
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "readOnly": "true"
                                                },
                                                "updated_at": {
                                                    "description": "Last update timestamp",
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "readOnly": "true"
                                                },
                                                "token": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User login successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "delete": {
                "tags": [
                    "auth"
                ],
                "summary": "Logout",
                "description": "Logout user and invalidate token",
                "operationId": "authLogout",
                "responses": {
                    "200": {
                        "description": "Successful log out",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "true"
                                        },
                                        "data": {
                                            "type": "object",
                                            "default": "null"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User logged out successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unathenticated logout attempt",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "false"
                                        },
                                        "data": {
                                            "type": "object",
                                            "default": "null"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "token": []
                    }
                ]
            }
        },
        "/api/events": {
            "get": {
                "tags": [
                    "events"
                ],
                "summary": "Get Events",
                "description": "Note : thiis endpoint has the date changed. to allow for testing of date",
                "operationId": "getEvents",
                "parameters": [
                    {
                        "name": "term",
                        "in": "query",
                        "description": "Search by city and country"
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Filter by exact date"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get array of events",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "true"
                                        },
                                        "data": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": "1"
                                                },
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Event"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "next_page_url": {
                                            "description": "User unique email address",
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@gmail.com"
                                        },
                                        "path": {
                                            "description": "next page url",
                                            "type": "string",
                                            "example": "http://localhost:8001/api/events"
                                        },
                                        "per_page": {
                                            "description": "number of result per page",
                                            "type": "string",
                                            "example": "20"
                                        },
                                        "prev_page_url": {
                                            "description": "previous page url",
                                            "type": "string",
                                            "example": "null"
                                        },
                                        "to": {
                                            "description": "item count",
                                            "type": "string",
                                            "example": "null"
                                        },
                                        "total": {
                                            "description": "total record count",
                                            "type": "string",
                                            "example": "null"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "token": []
                    }
                ]
            }
        },
        "/api/events_v2": {
            "get": {
                "tags": [
                    "events"
                ],
                "summary": "Get Events V2",
                "description": "Note : query json file",
                "operationId": "getEventsV2",
                "parameters": [
                    {
                        "name": "term",
                        "in": "query",
                        "description": "Search by city and country"
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Filter by exact date"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get array of events",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "default": "true"
                                        },
                                        "data": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": "1"
                                                },
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Event"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "next_page_url": {
                                            "description": "User unique email address",
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@gmail.com"
                                        },
                                        "path": {
                                            "description": "next page url",
                                            "type": "string",
                                            "example": "http://localhost:8001/api/events"
                                        },
                                        "per_page": {
                                            "description": "number of result per page",
                                            "type": "string",
                                            "example": "20"
                                        },
                                        "prev_page_url": {
                                            "description": "previous page url",
                                            "type": "string",
                                            "example": "null"
                                        },
                                        "to": {
                                            "description": "item count",
                                            "type": "string",
                                            "example": "null"
                                        },
                                        "total": {
                                            "description": "total record count",
                                            "type": "string",
                                            "example": "null"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "token": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Event": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": "true",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 32,
                        "example": "John"
                    },
                    "city": {
                        "type": "string",
                        "maxLength": 32,
                        "example": "ikeja"
                    },
                    "country": {
                        "type": "string",
                        "maxLength": 32,
                        "example": "Nigeria"
                    },
                    "startDate": {
                        "format": "date-time"
                    },
                    "endDate": {
                        "format": "date-time"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Event"
                }
            },
            "User": {
                "required": [
                    "password"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": "true",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "John"
                    },
                    "email": {
                        "description": "User unique email address",
                        "type": "string",
                        "format": "email",
                        "readOnly": "true",
                        "example": "user@gmail.com"
                    },
                    "email_verified_at": {
                        "description": "Datetime marker of verification status",
                        "type": "string",
                        "format": "date-time",
                        "readOnly": "true",
                        "example": "2019-02-25 12:59:20"
                    },
                    "created_at": {
                        "description": "Initial creation timestamp",
                        "type": "string",
                        "format": "date-time",
                        "readOnly": "true"
                    },
                    "updated_at": {
                        "description": "Last update timestamp",
                        "type": "string",
                        "format": "date-time",
                        "readOnly": "true"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "User"
                }
            }
        },
        "responses": {
            "422": {
                "description": "Wrong credentials response",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "success": {
                                    "type": "boolean",
                                    "default": "false"
                                },
                                "data": {
                                    "type": "object",
                                    "default": "null"
                                },
                                "message": {
                                    "type": "string",
                                    "example": "incorrect username or password."
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "401": {
                "description": "Unathenticated logout attempt",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "success": {
                                    "type": "boolean",
                                    "default": "false"
                                },
                                "data": {
                                    "type": "object",
                                    "default": "null"
                                },
                                "message": {
                                    "type": "string",
                                    "example": "Unauthenticated."
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "token": {
                "type": "http",
                "name": "token",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}